<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    tools:context=".views.fragments.HomeFragment">    <!-- TODO: Update blank fragment layout -->    <TextView        android:id="@+id/userId"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="@string/hello_blank_fragment" />    <androidx.recyclerview.widget.RecyclerView        android:id="@+id/rcv"        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1"        tools:itemCount="4"        tools:listitem="@layout/item_conv_self" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal">        <androidx.appcompat.widget.AppCompatEditText            android:id="@+id/msgEt"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1" />        <Button            android:id="@+id/sendBtn"            android:layout_width="wrap_content"            android:layout_height="wrap_content" />    </LinearLayout></LinearLayout>